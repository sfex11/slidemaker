{
  "name": "slide-maker",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:client\" \"bun run dev:server\"",
    "dev:client": "vite",
    "dev:server": "bun run --watch src/server/index.ts",
    "build": "bun run build:client && bun run build:server",
    "build:client": "vite build",
    "build:server": "bun build src/server/index.ts --outdir dist/server --target bun",
    "start": "bun run dist/server/index.js",
    "test": "bun test tests/unit",
    "test:unit": "bun test tests/unit",
    "test:e2e": "playwright test",
    "db:push": "prisma db push",
    "db:generate": "prisma generate"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/client": "^6.19.2",
    "bcryptjs": "^3.0.2",
    "cheerio": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "framer-motion": "^12.34.0",
    "lucide-react": "^0.564.0",
    "openai": "^6.22.0",
    "puppeteer": "^24.37.3",
    "radix-ui": "^1.4.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.13.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.1.2",
    "prisma": "^6.19.2",
    "tailwindcss": "3",
    "typescript": "^5.7.3",
    "vite": "^6.0.0"
  }
}
